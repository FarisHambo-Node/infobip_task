# Example Terraform variables file for analytics infrastructure
# Copy this file to terraform.tfvars and update with your actual values

aws_region = "us-east-1"
project_name = "infobip-task"

# ARN of the S3 bucket containing your data files (customers.csv, traffic.csv, channels.csv)
# This should be the bucket created by your base infrastructure
data_bucket_arn = "arn:aws:s3:::your-data-bucket-name"
data_bucket_name = "your-data-bucket-name"

# RDS connection details
rds_endpoint = "your-rds-endpoint.amazonaws.com"
rds_database_name = "infobip_db"
rds_username = "postgres"
rds_password = "your-secure-password"

# Glue job configuration
glue_max_capacity = 2
glue_timeout = 60

# Tags for all resources
tags = {
  Project     = "infobip-task"
  Environment = "production"
  ManagedBy   = "terraform"
  Component   = "analytics"
}
